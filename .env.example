# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=crm_db

# Server Configuration
NODE_ENV=development
PORT=3000

# Authentication & Security
JWT_SECRET=your_secret_key_here_min_32_chars
COOKIE_NAME=session

# Manus OAuth (if used)
MANUS_APP_ID=your_app_id
MANUS_APP_SECRET=your_app_secret
MANUS_API_URL=https://api.manus.app

# Forge API (if used)
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# Cloudflare R2 (recommended for file storage)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=nexora
R2_PUBLIC_URL=https://pub-xxxxxx.r2.dev

# AWS S3 (alternative for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Google Drive (if used)
GOOGLE_DRIVE_CREDENTIALS=

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Sentry (optional, for error tracking)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
